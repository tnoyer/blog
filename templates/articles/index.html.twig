{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Liste des articles{% endblock %}

{% block main %}
    <div class="container">
        {% set titre = "Liste des articles" %}
        <h1 style="text-align: center; margin-bottom: 2rem;">{{ titre }}</h1>
        {#
        {{ dump(articles }}
        {% for article in articles %}
        <h2><a href="{{ path('actualites_article', {'slug': article.slug}) }}">{{ article.titre }}</a></h2>
        <p>{{ article.contenu }}</p>
        {% endfor %}
        #}
        <div class="block-articles">
            {% for article in articles %}
                <div class="card" style="width: 18rem; height: 15rem; margin: 0 1rem 1rem 0;">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('actualites_article', {'slug': article.slug}) }}">{{ article.titre }}</a>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ article.slug }}</h6>
                        <p class="card-text">
                            //slice ne fonctionne pas avec raw mais avec striptags
                            {{ article.contenu | length > 100 ? article.contenu | slice(0, 100) | striptags ~ ' [...]' : article.contenu | raw }}
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="navigation">
            {{ knp_pagination_render(articles) }}
        </div>
    </div>
{% endblock %}
