{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Liste des articles{% endblock %}
{# Variables personnalisées #}
{% set queryParams = app.request.query.all %}

{% block main %}
    <div class="container">
        {% set titre = "Liste des articles" %}
        <h1 style="text-align: center; margin-bottom: 2rem;">{{ titre }}</h1>
        {#
        {{ dump(articles }}
        {% for article in articles %}
        <h2><a href="{{ path('actualites_article', {'slug': article.slug}) }}">{{ article.titre }}</a></h2>
        <p>{{ article.contenu }}</p>
        {% endfor %}
        #}
        <div class="block-categories" style="margin-bottom: 1rem">
            <h2>Filtrer</h2>
            <form id="filters">
                {% for categorie in categories %}
                    {# on verifie si la catégorie est dans les paramètres de l'url #}
                    {% if queryParams is not empty and queryParams.categories is defined %}
                        {% set checked = (categorie.id in queryParams.categories) ? "checked" : "" %}
                    {% else %}
                        {% set checked = "" %}
                    {% endif %}
                    <input type="checkbox" name="categories[]" id="cat{{ categorie.id }}" value="{{ categorie.id }}" {{ checked }}>
                    <label for="cat{{ categorie.id }}">{{ categorie.nom }}</label>
                {% endfor %}
                <input type="hidden" name="page" value="{{ page }}">
            </form>
        </div>
        <div id="content">
            {% include "articles/_content.html.twig" %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/filters.js') }}"></script>
{% endblock %}
